/**index.wxss**/
.container {
  min-height: 100vh;
  background: linear-gradient(135deg, #4c6ef5 0%, #5c7cfa 50%, #748ffc 100%);
  padding: 0;
  box-sizing: border-box;
}

/* 欢迎头部区域 */
.welcome-header {
  padding: 80rpx 32rpx 60rpx;
  background: rgba(255, 255, 255, 0.1);
  backdrop-filter: blur(20rpx);
  text-align: center;
}

.welcome-content {
  max-width: 600rpx;
  margin: 0 auto;
}

.logo-section {
  margin-bottom: 40rpx;
}

.app-logo {
  font-size: 120rpx;
  margin-bottom: 24rpx;
  display: block;
  filter: drop-shadow(0 8rpx 16rpx rgba(0, 0, 0, 0.2));
}

.app-title {
  font-size: 56rpx;
  font-weight: 700;
  color: white;
  margin-bottom: 12rpx;
  letter-spacing: 2rpx;
  display: block;
}

.app-version {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.8);
  font-weight: 400;
  display: block;
}

.welcome-text {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.welcome-message {
  font-size: 36rpx;
  font-weight: 600;
  color: white;
  line-height: 1.3;
  display: block;
}

.welcome-desc {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.9);
  line-height: 1.5;
  display: block;
}

/* 功能特性区域 */
.features-section {
  padding: 40rpx 32rpx;
  background: rgba(255, 255, 255, 0.05);
  backdrop-filter: blur(10rpx);
}

.section-header {
  text-align: center;
  margin-bottom: 40rpx;
  max-width: 600rpx;
  margin-left: auto;
  margin-right: auto;
}

.section-title {
  font-size: 36rpx;
  font-weight: 700;
  color: white;
  margin-bottom: 12rpx;
  display: block;
}

.section-subtitle {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.8);
  line-height: 1.4;
  display: block;
}

.features-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 20rpx;
  max-width: 700rpx;
  margin: 0 auto;
}

.feature-card {
  background: rgba(255, 255, 255, 0.15);
  border-radius: 20rpx;
  padding: 32rpx 24rpx;
  text-align: center;
  backdrop-filter: blur(10rpx);
  border: 1rpx solid rgba(255, 255, 255, 0.2);
  transition: all 0.3s ease;
}

.feature-card:active {
  transform: scale(0.95);
  background: rgba(255, 255, 255, 0.2);
}

.feature-icon-wrapper {
  margin-bottom: 20rpx;
}

.feature-icon {
  font-size: 56rpx;
  display: block;
  filter: drop-shadow(0 4rpx 8rpx rgba(0, 0, 0, 0.1));
}

.feature-info {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.feature-title {
  font-size: 28rpx;
  font-weight: 600;
  color: white;
  line-height: 1.2;
  display: block;
}

.feature-desc {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.8);
  line-height: 1.4;
  display: block;
}

/* 开始使用区域 */
.start-section {
  padding: 60rpx 32rpx;
}

.start-content {
  max-width: 600rpx;
  margin: 0 auto;
  text-align: center;
}

.start-title {
  font-size: 40rpx;
  font-weight: 700;
  color: white;
  margin-bottom: 16rpx;
  display: block;
  letter-spacing: 1rpx;
}

.start-desc {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.9);
  line-height: 1.5;
  margin-bottom: 48rpx;
  display: block;
}

.connect-btn {
  background: linear-gradient(45deg, #ff6b6b, #ff5252);
  color: white;
  border: none;
  border-radius: 60rpx;
  padding: 0;
  width: 100%;
  height: 112rpx;
  box-shadow: 0 16rpx 48rpx rgba(255, 107, 107, 0.4);
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 40rpx;
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
}

.connect-btn::after {
  border: none;
}

.connect-btn:active {
  transform: translateY(4rpx);
  box-shadow: 0 8rpx 24rpx rgba(255, 107, 107, 0.5);
}

.btn-content {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.btn-icon {
  font-size: 32rpx;
}

.btn-text {
  font-size: 32rpx;
  font-weight: 600;
}

.btn-arrow {
  font-size: 36rpx;
  font-weight: bold;
  transition: transform 0.3s ease;
}

.connect-btn:active .btn-arrow {
  transform: translateX(8rpx);
}

/* 信息说明区域 */
.info-section {
  padding: 20rpx 32rpx 80rpx;
}

.info-card {
  background: rgba(255, 255, 255, 0.1);
  border-radius: 20rpx;
  padding: 32rpx;
  max-width: 600rpx;
  margin: 0 auto;
  backdrop-filter: blur(10rpx);
  border: 1rpx solid rgba(255, 255, 255, 0.2);
}

.info-header {
  display: flex;
  align-items: center;
  gap: 12rpx;
  margin-bottom: 24rpx;
}

.info-icon {
  font-size: 32rpx;
}

.info-title {
  font-size: 30rpx;
  font-weight: 600;
  color: white;
}

.info-content {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.info-text {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.9);
  line-height: 1.5;
  display: block;
}
