/**index.wxss**/
page {
  height: 100vh;
  display: flex;
  flex-direction: column;
}
/**index.wxss**/
.container {
  padding: 40rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  min-height: 100vh;
  color: white;
}

.header {
  text-align: center;
  margin-bottom: 80rpx;
  padding-top: 60rpx;
}

.app-title {
  font-size: 48rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
}

.app-version {
  font-size: 28rpx;
  opacity: 0.8;
}

.features {
  background: rgba(255, 255, 255, 0.1);
  border-radius: 20rpx;
  padding: 40rpx;
  margin-bottom: 60rpx;
  backdrop-filter: blur(10rpx);
}

.features-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 30rpx;
  text-align: center;
}

.feature-item {
  margin-bottom: 20rpx;
  font-size: 28rpx;
  line-height: 1.6;
}

.action-section {
  margin: 60rpx 0;
  text-align: center;
}

.start-btn {
  background: linear-gradient(45deg, #ff6b6b, #ee5a24);
  color: white;
  border: none;
  border-radius: 50rpx;
  padding: 30rpx 60rpx;
  font-size: 32rpx;
  font-weight: bold;
  box-shadow: 0 10rpx 30rpx rgba(0, 0, 0, 0.2);
}

.start-btn:active {
  transform: translateY(2rpx);
  box-shadow: 0 5rpx 15rpx rgba(0, 0, 0, 0.2);
}

.description {
  text-align: center;
  margin-top: 40rpx;
}

.desc-text {
  font-size: 24rpx;
  opacity: 0.7;
  line-height: 1.5;
}
