<!--index.wxml-->
<view class="container">
  <!-- 头部标题 -->
  <view class="header">
    <view class="app-title">{{appName}}</view>
    <view class="app-version">{{version}}</view>
  </view>

  <!-- 功能介绍 -->
  <view class="features">
    <view class="features-title">功能特性</view>
    <view class="feature-item" wx:for="{{features}}" wx:key="index">
      <text>{{item}}</text>
    </view>
  </view>

  <!-- 开始按钮 -->
  <view class="action-section">
    <button class="start-btn" bindtap="goToBluetooth">
      开始使用蓝牙功能
    </button>
  </view>

  <!-- 说明文字 -->
  <view class="description">
    <text class="desc-text">请确保设备已开启蓝牙功能，并准备好HC-08蓝牙模块</text>
  </view>
</view>
