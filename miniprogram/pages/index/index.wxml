<!--index.wxml-->
<view class="container">
  <!-- 头部区域 -->
  <view class="header">
    <view class="header-content">
      <view class="app-info">
        <text class="app-title">{{appName}}</text>
        <text class="app-version">{{version}}</text>
      </view>
      <view class="app-icon">⌚</view>
    </view>
  </view>

  <!-- 统计数据卡片 -->
  <view class="stats-section">
    <view class="stats-grid">
      <view class="stat-card" wx:for="{{stats}}" wx:key="label">
        <view class="stat-value">{{item.value}}</view>
        <view class="stat-info">
          <text class="stat-label">{{item.label}}</text>
          <text class="stat-unit">{{item.unit}}</text>
        </view>
      </view>
    </view>
  </view>

  <!-- 功能特性 -->
  <view class="features-section">
    <view class="section-title">
      <text class="title-text">智能功能</text>
    </view>
    <view class="features-grid">
      <view class="feature-card" wx:for="{{features}}" wx:key="title">
        <view class="feature-icon">{{item.icon}}</view>
        <view class="feature-content">
          <text class="feature-title">{{item.title}}</text>
          <text class="feature-desc">{{item.desc}}</text>
        </view>
      </view>
    </view>
  </view>

  <!-- 操作按钮 -->
  <view class="action-section">
    <button class="primary-btn" bindtap="goToBluetooth">
      <text class="btn-text">连接智能手环</text>
      <text class="btn-icon">→</text>
    </button>
  </view>

  <!-- 底部提示 -->
  <view class="footer-tip">
    <text class="tip-text">请确保手环设备已开启并处于可发现状态</text>
  </view>
</view>
