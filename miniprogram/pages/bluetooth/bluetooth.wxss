/* bluetooth.wxss */
.container {
  min-height: 100vh;
  background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
  padding: 32rpx;
  box-sizing: border-box;
}

/* 连接状态卡片 */
.status-card {
  background: white;
  border-radius: 20rpx;
  padding: 32rpx;
  margin-bottom: 32rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.08);
  border: 1rpx solid rgba(76, 110, 245, 0.1);
}

.status-header {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
}

.status-icon {
  width: 64rpx;
  height: 64rpx;
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  margin-right: 20rpx;
  transition: all 0.3s ease;
}

.status-icon.active {
  background: linear-gradient(45deg, #4c6ef5, #5c7cfa);
  color: white;
}

.status-icon.inactive {
  background: #f8f9fa;
  color: #adb5bd;
}

.status-info {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.status-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 4rpx;
  line-height: 1.2;
}

.status-desc {
  font-size: 26rpx;
  color: #666;
  line-height: 1.3;
}

.device-info {
  margin-top: 20rpx;
  padding-top: 20rpx;
  border-top: 1rpx solid #f0f0f0;
}

.device-badge {
  background: linear-gradient(45deg, #4c6ef5, #5c7cfa);
  color: white;
  padding: 16rpx 24rpx;
  border-radius: 50rpx;
  display: inline-flex;
  align-items: center;
  gap: 16rpx;
}

.device-name {
  font-size: 28rpx;
  font-weight: 500;
}

.device-signal {
  font-size: 24rpx;
  opacity: 0.8;
}

/* 扫描区域 */
.scan-section {
  background: white;
  border-radius: 20rpx;
  padding: 32rpx;
  margin-bottom: 32rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.08);
}

.section-header {
  margin-bottom: 32rpx;
}

.section-title {
  font-size: 36rpx;
  font-weight: 700;
  color: #333;
  margin-bottom: 8rpx;
  line-height: 1.2;
}

.section-subtitle {
  font-size: 26rpx;
  color: #666;
  line-height: 1.3;
}

.scan-tip {
  background: linear-gradient(45deg, #e3f2fd, #f0f7ff);
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 32rpx;
  display: flex;
  align-items: center;
  border: 1rpx solid #bbdefb;
}

.tip-icon {
  font-size: 32rpx;
  margin-right: 16rpx;
}

.tip-text {
  font-size: 26rpx;
  color: #1976d2;
  line-height: 1.4;
  flex: 1;
}

/* 扫描控制按钮 */
.scan-controls {
  margin-bottom: 32rpx;
}

.scan-btn {
  width: 100%;
  background: linear-gradient(45deg, #4c6ef5, #5c7cfa);
  color: white;
  border: none;
  border-radius: 16rpx;
  padding: 0;
  font-size: 30rpx;
  font-weight: 600;
  height: 96rpx;
  margin-bottom: 16rpx;
  box-shadow: 0 8rpx 24rpx rgba(76, 110, 245, 0.3);
  transition: all 0.3s ease;
}

.scan-btn.scanning {
  background: linear-gradient(45deg, #fab005, #fd7e14);
  box-shadow: 0 8rpx 24rpx rgba(253, 126, 20, 0.3);
}

.scan-btn:disabled {
  background: #e9ecef;
  color: #adb5bd;
  box-shadow: none;
}

.scan-btn:active:not(:disabled) {
  transform: translateY(2rpx);
}

.btn-content {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
}

.btn-icon {
  font-size: 28rpx;
}

.btn-text {
  font-size: 30rpx;
  font-weight: 600;
}

.control-buttons {
  display: flex;
  gap: 16rpx;
}

.secondary-btn, .danger-btn {
  flex: 1;
  border: none;
  border-radius: 12rpx;
  padding: 20rpx;
  font-size: 28rpx;
  font-weight: 500;
  height: 72rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.secondary-btn {
  background: #f8f9fa;
  color: #495057;
  border: 1rpx solid #dee2e6;
}

.secondary-btn:disabled {
  background: #e9ecef;
  color: #adb5bd;
}

.danger-btn {
  background: linear-gradient(45deg, #ff6b6b, #ff5252);
  color: white;
  box-shadow: 0 4rpx 16rpx rgba(255, 107, 107, 0.3);
}

/* 设备列表 */
.device-section {
  margin-top: 32rpx;
}

.device-header {
  margin-bottom: 20rpx;
}

.device-count {
  font-size: 28rpx;
  color: #666;
  font-weight: 500;
}

.device-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.device-card {
  background: #f8f9fa;
  border-radius: 16rpx;
  padding: 24rpx;
  display: flex;
  align-items: center;
  border: 1rpx solid #e9ecef;
  transition: all 0.3s ease;
}

.device-card:active {
  background: #e3f2fd;
  border-color: #4c6ef5;
  transform: scale(0.98);
}

.device-avatar {
  width: 64rpx;
  height: 64rpx;
  background: linear-gradient(45deg, #4c6ef5, #5c7cfa);
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  color: white;
  margin-right: 20rpx;
}

.device-details {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 6rpx;
}

.device-name {
  font-size: 30rpx;
  color: #333;
  font-weight: 600;
  line-height: 1.2;
}

.device-signal {
  font-size: 24rpx;
  color: #666;
  line-height: 1.2;
}

.connect-arrow {
  font-size: 32rpx;
  color: #4c6ef5;
  font-weight: bold;
}

/* 空状态 */
.empty-state {
  text-align: center;
  padding: 80rpx 40rpx;
}

.empty-icon {
  font-size: 80rpx;
  margin-bottom: 24rpx;
  opacity: 0.5;
}

.empty-title {
  font-size: 32rpx;
  color: #333;
  font-weight: 600;
  margin-bottom: 12rpx;
  display: block;
}

.empty-desc {
  font-size: 26rpx;
  color: #666;
  line-height: 1.4;
  display: block;
}

/* 数据通信区域 */
.communication-section {
  background: white;
  border-radius: 20rpx;
  padding: 32rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.08);
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 32rpx;
}

.disconnect-btn {
  background: linear-gradient(45deg, #ff6b6b, #ff5252);
  color: white;
  border: none;
  border-radius: 12rpx;
  padding: 16rpx 24rpx;
  font-size: 26rpx;
  font-weight: 500;
  height: 60rpx;
  box-shadow: 0 4rpx 16rpx rgba(255, 107, 107, 0.3);
}

/* 数据面板 */
.data-panel {
  margin-bottom: 32rpx;
}

.panel-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.panel-title {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.title-text {
  font-size: 30rpx;
  font-weight: 600;
  color: #333;
}

.title-status {
  width: 12rpx;
  height: 12rpx;
  background: #52c41a;
  border-radius: 50%;
  color: #52c41a;
  font-size: 12rpx;
  animation: pulse 2s infinite;
}

@keyframes pulse {
  0%, 100% { opacity: 1; }
  50% { opacity: 0.5; }
}

.clear-btn {
  background: #ffc107;
  color: white;
  border: none;
  border-radius: 8rpx;
  padding: 12rpx 20rpx;
  font-size: 24rpx;
  font-weight: 500;
  height: 52rpx;
}

.data-content {
  height: 400rpx;
  background: #f8f9fa;
  border-radius: 12rpx;
  padding: 20rpx;
  border: 1rpx solid #e9ecef;
  box-sizing: border-box;
}

.data-item {
  display: flex;
  align-items: center;
  gap: 16rpx;
  margin-bottom: 16rpx;
  padding: 16rpx;
  background: white;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.04);
}

.data-item:last-child {
  margin-bottom: 0;
}

.data-time {
  width: 32rpx;
  height: 32rpx;
  background: #4c6ef5;
  color: white;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 20rpx;
  font-weight: 600;
  flex-shrink: 0;
}

.data-message {
  flex: 1;
  font-size: 26rpx;
  color: #333;
  line-height: 1.4;
  word-break: break-all;
}

.empty-data {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 100%;
  gap: 16rpx;
}

.empty-icon {
  font-size: 48rpx;
  opacity: 0.5;
}

.empty-text {
  font-size: 26rpx;
  color: #666;
}

/* 发送面板 */
.send-panel {
  border-top: 1rpx solid #f0f0f0;
  padding-top: 32rpx;
}

.send-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.send-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #333;
}

.format-toggle {
  background: #f8f9fa;
  border: 1rpx solid #e9ecef;
  border-radius: 24rpx;
  padding: 8rpx 16rpx;
  font-size: 24rpx;
  font-weight: 500;
  height: 56rpx;
  display: flex;
  align-items: center;
  gap: 8rpx;
  transition: all 0.3s ease;
}

.format-toggle:active {
  background: #4c6ef5;
  border-color: #4c6ef5;
}

.format-toggle:active .format-text {
  color: white;
}

.format-toggle:active .format-icon {
  transform: rotate(180deg);
}

.format-text {
  font-size: 24rpx;
  color: #495057;
  font-weight: 600;
}

.format-icon {
  font-size: 20rpx;
  transition: transform 0.3s ease;
}

.input-group {
  display: flex;
  gap: 16rpx;
  align-items: stretch;
  margin-bottom: 24rpx;
}

.command-input {
  flex: 1;
  border: 1rpx solid #e9ecef;
  border-radius: 12rpx;
  padding: 24rpx 20rpx;
  font-size: 28rpx;
  background: #f8f9fa;
  height: 80rpx;
  box-sizing: border-box;
  transition: all 0.3s ease;
}

.command-input:focus {
  border-color: #4c6ef5;
  background: white;
  box-shadow: 0 0 0 4rpx rgba(76, 110, 245, 0.1);
}

.send-btn {
  width: 80rpx;
  background: linear-gradient(45deg, #4c6ef5, #5c7cfa);
  color: white;
  border: none;
  border-radius: 12rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  height: 80rpx;
  box-shadow: 0 4rpx 16rpx rgba(76, 110, 245, 0.3);
  transition: all 0.3s ease;
}

.send-btn:disabled {
  background: #e9ecef;
  color: #adb5bd;
  box-shadow: none;
}

.send-btn:active:not(:disabled) {
  transform: scale(0.95);
}

.send-icon {
  font-size: 28rpx;
}

/* 快捷指令区域 */
.quick-commands-section {
  margin-top: 32rpx;
  padding-top: 32rpx;
  border-top: 1rpx solid #f0f0f0;
}

.commands-header {
  margin-bottom: 24rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.commands-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
}

.commands-desc {
  font-size: 22rpx;
  color: #666;
  font-style: italic;
}

/* 快捷指令按钮 */
.quick-commands {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 16rpx;
}

.quick-btn {
  background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
  color: #495057;
  border: 1rpx solid #dee2e6;
  border-radius: 16rpx;
  padding: 0;
  font-size: 24rpx;
  font-weight: 500;
  height: 88rpx;
  transition: all 0.3s ease;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.quick-btn:active {
  background: linear-gradient(135deg, #4c6ef5 0%, #5c7cfa 100%);
  color: white;
  border-color: #4c6ef5;
  transform: scale(0.95);
  box-shadow: 0 4rpx 16rpx rgba(76, 110, 245, 0.3);
}

.quick-btn .btn-content {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 100%;
  gap: 4rpx;
}

.quick-btn .btn-icon {
  font-size: 24rpx;
  line-height: 1;
}

.quick-btn .btn-label {
  font-size: 24rpx;
  font-weight: 600;
  line-height: 1;
}

.quick-btn .btn-code {
  font-size: 20rpx;
  opacity: 0.7;
  font-family: 'Courier New', monospace;
  font-weight: 500;
  line-height: 1;
}

.quick-btn:active .btn-code {
  opacity: 0.9;
}