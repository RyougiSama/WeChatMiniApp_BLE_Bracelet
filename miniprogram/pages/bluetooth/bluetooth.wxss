/* bluetooth.wxss */
.container {
  min-height: 100vh;
  background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
  padding: 32rpx;
  box-sizing: border-box;
}

/* 连接状态卡片 */
.status-card {
  background: white;
  border-radius: 20rpx;
  padding: 32rpx;
  margin-bottom: 32rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.08);
  border: 1rpx solid rgba(76, 110, 245, 0.1);
}

.status-header {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
}

.status-icon {
  width: 64rpx;
  height: 64rpx;
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  margin-right: 20rpx;
  transition: all 0.3s ease;
}

.status-icon.active {
  background: linear-gradient(45deg, #4c6ef5, #5c7cfa);
  color: white;
}

.status-icon.inactive {
  background: #f8f9fa;
  color: #adb5bd;
}

.status-info {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.status-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 4rpx;
  line-height: 1.2;
}

.status-desc {
  font-size: 26rpx;
  color: #666;
  line-height: 1.3;
}

.device-info {
  margin-top: 20rpx;
  padding-top: 20rpx;
  border-top: 1rpx solid #f0f0f0;
}

.device-badge {
  background: linear-gradient(45deg, #4c6ef5, #5c7cfa);
  color: white;
  padding: 16rpx 24rpx;
  border-radius: 50rpx;
  display: inline-flex;
  align-items: center;
  gap: 16rpx;
}

.device-name {
  font-size: 28rpx;
  font-weight: 500;
}

.device-signal {
  font-size: 24rpx;
  opacity: 0.8;
}

/* 扫描区域 */
.scan-section {
  background: white;
  border-radius: 20rpx;
  padding: 32rpx;
  margin-bottom: 32rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.08);
}

.section-header {
  margin-bottom: 32rpx;
}

.section-title {
  font-size: 36rpx;
  font-weight: 700;
  color: #333;
  margin-bottom: 8rpx;
  line-height: 1.2;
}

.section-subtitle {
  font-size: 26rpx;
  color: #666;
  line-height: 1.3;
}

.scan-tip {
  background: linear-gradient(45deg, #e3f2fd, #f0f7ff);
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 32rpx;
  display: flex;
  align-items: center;
  border: 1rpx solid #bbdefb;
}

.tip-icon {
  font-size: 32rpx;
  margin-right: 16rpx;
}

.tip-text {
  font-size: 26rpx;
  color: #1976d2;
  line-height: 1.4;
  flex: 1;
}

/* 扫描控制按钮 */
.scan-controls {
  margin-bottom: 32rpx;
}

.scan-btn {
  width: 100%;
  background: linear-gradient(45deg, #4c6ef5, #5c7cfa);
  color: white;
  border: none;
  border-radius: 16rpx;
  padding: 0;
  font-size: 30rpx;
  font-weight: 600;
  height: 96rpx;
  margin-bottom: 16rpx;
  box-shadow: 0 8rpx 24rpx rgba(76, 110, 245, 0.3);
  transition: all 0.3s ease;
}

.scan-btn.scanning {
  background: linear-gradient(45deg, #fab005, #fd7e14);
  box-shadow: 0 8rpx 24rpx rgba(253, 126, 20, 0.3);
}

.scan-btn:disabled {
  background: #e9ecef;
  color: #adb5bd;
  box-shadow: none;
}

.scan-btn:active:not(:disabled) {
  transform: translateY(2rpx);
}

.btn-content {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
}

.btn-icon {
  font-size: 28rpx;
}

.btn-text {
  font-size: 30rpx;
  font-weight: 600;
}

.control-buttons {
  display: flex;
  gap: 16rpx;
}

.secondary-btn, .danger-btn {
  flex: 1;
  border: none;
  border-radius: 12rpx;
  padding: 20rpx;
  font-size: 28rpx;
  font-weight: 500;
  height: 72rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.secondary-btn {
  background: #f8f9fa;
  color: #495057;
  border: 1rpx solid #dee2e6;
}

.secondary-btn:disabled {
  background: #e9ecef;
  color: #adb5bd;
}

.danger-btn {
  background: linear-gradient(45deg, #ff6b6b, #ff5252);
  color: white;
  box-shadow: 0 4rpx 16rpx rgba(255, 107, 107, 0.3);
}

/* 设备列表 */
.device-section {
  margin-top: 32rpx;
}

.device-header {
  margin-bottom: 20rpx;
}

.device-count {
  font-size: 28rpx;
  color: #666;
  font-weight: 500;
}

.device-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.device-card {
  background: #f8f9fa;
  border-radius: 16rpx;
  padding: 24rpx;
  display: flex;
  align-items: center;
  border: 1rpx solid #e9ecef;
  transition: all 0.3s ease;
}

.device-card:active {
  background: #e3f2fd;
  border-color: #4c6ef5;
  transform: scale(0.98);
}

.device-avatar {
  width: 64rpx;
  height: 64rpx;
  background: linear-gradient(45deg, #4c6ef5, #5c7cfa);
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  color: white;
  margin-right: 20rpx;
}

.device-details {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 6rpx;
}

.device-name {
  font-size: 30rpx;
  color: #333;
  font-weight: 600;
  line-height: 1.2;
}

.device-signal {
  font-size: 24rpx;
  color: #666;
  line-height: 1.2;
}

.connect-arrow {
  font-size: 32rpx;
  color: #4c6ef5;
  font-weight: bold;
}

/* 空状态 */
.empty-state {
  text-align: center;
  padding: 80rpx 40rpx;
}

.empty-icon {
  font-size: 80rpx;
  margin-bottom: 24rpx;
  opacity: 0.5;
}

.empty-title {
  font-size: 32rpx;
  color: #333;
  font-weight: 600;
  margin-bottom: 12rpx;
  display: block;
}

.empty-desc {
  font-size: 26rpx;
  color: #666;
  line-height: 1.4;
  display: block;
}

/* 数据通信区域 */
.communication-section {
  background: white;
  border-radius: 20rpx;
  padding: 32rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.08);
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 32rpx;
}

.disconnect-btn {
  background: linear-gradient(45deg, #ff6b6b, #ff5252);
  color: white;
  border: none;
  border-radius: 12rpx;
  padding: 16rpx 24rpx;
  font-size: 26rpx;
  font-weight: 500;
  height: 60rpx;
  box-shadow: 0 4rpx 16rpx rgba(255, 107, 107, 0.3);
}

/* 数据面板 */
.data-panel {
  margin-bottom: 32rpx;
}

.panel-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.panel-title {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.title-text {
  font-size: 30rpx;
  font-weight: 600;
  color: #333;
}

.title-status {
  width: 12rpx;
  height: 12rpx;
  background: #52c41a;
  border-radius: 50%;
  color: #52c41a;
  font-size: 12rpx;
  animation: pulse 2s infinite;
}

@keyframes pulse {
  0%, 100% { opacity: 1; }
  50% { opacity: 0.5; }
}

.panel-controls {
  display: flex;
  gap: 12rpx;
  align-items: center;
}

.mode-toggle {
  background: #f8f9fa;
  border: 1rpx solid #e9ecef;
  border-radius: 8rpx;
  padding: 8rpx 16rpx;
  font-size: 22rpx;
  font-weight: 500;
  height: 52rpx;
  display: flex;
  align-items: center;
  gap: 6rpx;
  transition: all 0.3s ease;
}

.mode-toggle:active {
  background: #4c6ef5;
  border-color: #4c6ef5;
}

.mode-toggle:active .mode-text {
  color: white;
}

.mode-toggle:active .mode-icon {
  transform: rotate(180deg);
}

.mode-text {
  font-size: 22rpx;
  color: #495057;
  font-weight: 600;
}

.mode-icon {
  font-size: 18rpx;
  transition: transform 0.3s ease;
}

.clear-btn {
  background: #ffc107;
  color: white;
  border: none;
  border-radius: 8rpx;
  padding: 12rpx 20rpx;
  font-size: 24rpx;
  font-weight: 500;
  height: 52rpx;
}

.data-content {
  height: 400rpx;
  background: #f8f9fa;
  border-radius: 12rpx;
  padding: 20rpx;
  border: 1rpx solid #e9ecef;
  box-sizing: border-box;
}

.data-item {
  display: flex;
  align-items: flex-start;
  gap: 16rpx;
  margin-bottom: 16rpx;
  padding: 16rpx;
  background: white;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.04);
  transition: all 0.3s ease;
}

.data-item:last-child {
  margin-bottom: 0;
}

.data-item.send {
  border-left: 4rpx solid #4c6ef5;
}

.data-item.receive {
  border-left: 4rpx solid #52c41a;
}

.data-indicator {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
  flex-shrink: 0;
}

.data-icon {
  font-size: 24rpx;
  line-height: 1;
}

.data-time {
  font-size: 20rpx;
  color: #666;
  font-weight: 500;
  text-align: center;
  line-height: 1.2;
  min-width: 80rpx;
}

.data-content-wrapper {
  flex: 1;
  min-width: 0;
}

.data-message {
  font-size: 26rpx;
  color: #333;
  line-height: 1.5;
  word-break: break-all;
  padding: 8rpx 12rpx;
  background: #f8f9fa;
  border-radius: 8rpx;
  transition: all 0.3s ease;
}

.data-message.hex-message {
  font-family: 'Courier New', Monaco, 'Lucida Console', monospace;
  font-weight: 500;
  letter-spacing: 1rpx;
  background: #fff3cd;
  color: #856404;
  border: 1rpx solid #ffeaa7;
}

.empty-data {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 100%;
  gap: 16rpx;
}

.empty-icon {
  font-size: 48rpx;
  opacity: 0.5;
}

.empty-text {
  font-size: 26rpx;
  color: #666;
}

/* 智能控制面板 */
.control-panel {
  border-top: 1rpx solid #f0f0f0;
  padding-top: 32rpx;
}

.panel-header {
  text-align: center;
  margin-bottom: 32rpx;
}

.panel-title {
  font-size: 32rpx;
  font-weight: 700;
  color: #333;
  margin-bottom: 8rpx;
  display: block;
}

.panel-subtitle {
  font-size: 26rpx;
  color: #666;
  line-height: 1.4;
  display: block;
}

/* 控制按钮网格 */
.control-grid {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.control-btn {
  background: white;
  border: 1rpx solid #e9ecef;
  border-radius: 16rpx;
  padding: 24rpx;
  display: flex;
  align-items: center;
  gap: 20rpx;
  transition: all 0.3s ease;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.04);
  position: relative;
  overflow: hidden;
}

.control-btn::after {
  border: none;
}

.control-btn:active {
  transform: scale(0.98);
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
}

/* 不同功能按钮的特色颜色 */
.control-btn.heart-rate:active {
  border-color: #ff6b6b;
  background: linear-gradient(135deg, #fff5f5 0%, #ffe0e0 100%);
}

.control-btn.steps:active {
  border-color: #51cf66;
  background: linear-gradient(135deg, #f3faf4 0%, #e6f7e8 100%);
}

.control-btn.battery:active {
  border-color: #ffd43b;
  background: linear-gradient(135deg, #fffbf0 0%, #fff3c4 100%);
}

.control-btn.sync:active {
  border-color: #4c6ef5;
  background: linear-gradient(135deg, #f0f4ff 0%, #e0ebff 100%);
}

.btn-icon-wrapper {
  width: 72rpx;
  height: 72rpx;
  background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
  border-radius: 18rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
  transition: all 0.3s ease;
}

.control-btn:active .btn-icon-wrapper {
  transform: scale(1.1);
}

.control-btn.heart-rate:active .btn-icon-wrapper {
  background: linear-gradient(135deg, #ff6b6b 0%, #ff5252 100%);
}

.control-btn.steps:active .btn-icon-wrapper {
  background: linear-gradient(135deg, #51cf66 0%, #40c057 100%);
}

.control-btn.battery:active .btn-icon-wrapper {
  background: linear-gradient(135deg, #ffd43b 0%, #fcc419 100%);
}

.control-btn.sync:active .btn-icon-wrapper {
  background: linear-gradient(135deg, #4c6ef5 0%, #364fc7 100%);
}

.btn-icon {
  font-size: 36rpx;
  transition: all 0.3s ease;
}

.control-btn:active .btn-icon {
  filter: brightness(0) invert(1);
}

.btn-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 6rpx;
}

.btn-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #333;
  line-height: 1.2;
  display: block;
}

.btn-desc {
  font-size: 24rpx;
  color: #666;
  line-height: 1.3;
  display: block;
}

.btn-indicator {
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
}

.indicator-dot {
  font-size: 16rpx;
  color: #dee2e6;
  transition: all 0.3s ease;
}

.control-btn:active .indicator-dot {
  color: #4c6ef5;
  transform: scale(1.2);
}