/**app.wxss**/
page {
  background-color: #f5f5f5;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'PingFang SC', 'Hiragino Sans GB', 'Microsoft YaHei', 'Helvetica Neue', Helvetica, Arial, sans-serif;
}

/* 通用按钮样式 */
button {
  border-radius: 8rpx;
  font-size: 28rpx;
}

button::after {
  border: none;
}

/* 通用输入框样式 */
input {
  outline: none;
}

/* 滚动条样式 */
::-webkit-scrollbar {
  width: 0;
  background: transparent;
} 
